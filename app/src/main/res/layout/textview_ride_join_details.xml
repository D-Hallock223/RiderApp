<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/next_button_paint"
    android:orientation="vertical"
    android:paddingHorizontal="8dp"
    android:paddingVertical="4dp"
    android:layout_marginVertical="2dp"
    android:id="@+id/ll_ride_join_user_summary">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ride_join_user_name"
        android:text="rider Name"
        android:textSize="18dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rider Email id"
        android:id="@+id/tv_ride_join_user_email"
        android:textColor="@android:color/darker_gray"
        android:textSize="16dp"/>

</LinearLayout>